<Window x:Class="Capitulo4_5WPF.Capitulo4.Ejercicio2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo4_5WPF.Capitulo4"
        mc:Ignorable="d"
        Title="Ejercicio 2" Height="400" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <StackPanel Orientation="Horizontal">
                <Label Content="Base: "></Label>
                <TextBox x:Name="baseTextBox" Height="18" Width="100"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Exponente: "> </Label>
                <TextBox x:Name="ExponenteTextBox" Height="18" Width="69"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="CalcularButton" Content="Calcular" Margin="5,5" Click="CalcularButton_Click"></Button>
                <Label x:Name="ResultadoLabel" Content=" "> </Label>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
