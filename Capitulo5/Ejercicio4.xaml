<Window x:Class="Capitulo4_5WPF.Capitulo5.Ejercicio4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo4_5WPF.Capitulo5"
        mc:Ignorable="d"
        Title="Ejercicio4" Height="400" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">

            <StackPanel Orientation="Horizontal">
                <Label Content="Numero: "></Label>
                <TextBox x:Name="numeroTextBox" Height="18" Width="70" Margin="5,0"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="CalcularButton" Content=" Factorial " Margin="10,0" Click="CalcularButton_Click"></Button>
                <Label x:Name="ResultadoLabel"> </Label>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
