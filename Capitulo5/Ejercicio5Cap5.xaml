<Window x:Class="Capitulo4_5WPF.Capitulo5.Ejercicio5Cap5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo4_5WPF.Capitulo5"
        mc:Ignorable="d"
        Title="Ejercicio5Cap5" Height="400" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">

            <StackPanel Orientation="Horizontal">
                <Label Content="Numero: "></Label>
                <TextBox x:Name="NumeroTextBox" Height="18" Width="70"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                 <Button x:Name="ConversionButton" Content="Conversion" Click="ConversionButton_Click" ></Button>
                <Label x:Name="resultadoLabel"></Label>
            </StackPanel>

           
            
        </StackPanel>
    </Grid>
</Window>
